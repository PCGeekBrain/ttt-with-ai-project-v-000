#!/usr/bin/env ruby

require_relative '../config/environment'
puts "Welcome to TicTacToe!"
puts "Please enter the number of players: (0/1/2) :"
players = gets.strip.to_i
puts "There are #{players} real players and #{2 - players} bots"

if players == 1
    puts "Who should go first (1 = human, 2 = machine)?"
    first = gets.strip.to_i
    first == 1 ? game = Game.new(Players::Human.new("X"), Players::Computer.new("O")) : game = Game.new(Players::Computer.new("X"), Players::Human.new("O"))
    game.play
elsif players == 0
    puts "X goes first..."
    game = Game.new(Players::Computer.new("X"), Players::Computer.new("O"))
    game.play
else players == 2
    puts "X goes first..."
    game = Game.new
    game.play
end